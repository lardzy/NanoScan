<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:background="@drawable/rounded_rectangle"
    android:layout_marginBottom="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/card_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/equipment_front"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/card_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_weight="0.6"
        android:contentDescription="@string/card_image_contentDescription" />
    <TextView
        android:id="@+id/card_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/card_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card_title_1"
        app:layout_constraintHorizontal_weight="0.4"
        android:layout_marginBottom="12dp"
        android:text="@string/device_name"
        android:textSize="32dp"
        android:textStyle="bold"
        android:gravity="center_horizontal|bottom"/>
    <TextView
        android:id="@+id/card_title_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/card_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="0.4"
        android:text="@string/device_type_nir"
        android:textSize="18sp"
        android:gravity="center_horizontal|top"/>

</androidx.constraintlayout.widget.ConstraintLayout>